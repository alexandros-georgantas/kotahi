<section id="article-outro">
    <h4>Categories and tags</h4>
    <ul class="tags-list">
        {% for tag in article.subjects %}
            <li>
                <a href="/search:for={{ tag.name }}">{{ tag.name }}</a>
                {{- '<span class="separator"> | </span>' | safe -}}
            </li>
        {% endfor %}
        {% for tag in article.keywords %}
            <li>
                <a href="/search:for={{ keyword }}">{{ tag }}</a>
                {% if not loop.last %}{{- '<span class="separator">|</span>' | safe -}}{% endif %}
            </li>
        {% endfor %}
    </ul>
    <h4>Research organism</h4>
    <ul class="orgs-list">
        {% for org in article.researchOrganisms %}
            <li>
                <a href="/search:for={{ org }}">{{ org | safe}}</a>
            </li>
        {% endfor %}
    </ul>
</section>
